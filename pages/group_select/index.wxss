/**index.wxss**/
.head-title {
  display: block;
  text-align: center;
  font-weight: 500;
  font-size: 24px;
}
.item {
  display: block;
  margin: 20px 0 10px;
  padding-left: 10px;
  font-size: 16px;
}
.ps {
  margin-bottom: 10px;
  padding: 0 10px;
  color: #666;
  font-size: 24rpx;
}
.tree-view{width:100%}
.group-page{background-color: #ffffff;}
.unread{
  position:fixed;
  top:0rpx;
  color: #000000;
  height: 80rpx;
  padding: 10rpx 40rpx;
  text-align: left;
  width: 670rpx;
  background-color:#f2f2f2;
}
.unread text{
  display: inline-block;
  line-height: 80rpx;
  font-size: 36rpx;
}
.unread image{
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
  padding-right: 20rpx;
}
.group-bottom{
  position:fixed;
  bottom:0rpx;
  color: #000000;
  height: 80rpx;
  padding: 10rpx 40rpx;
  text-align: left;
  width: 670rpx;
  background-color:#f2f2f2;
  display: flex;
  justify-content:space-between;
  z-index:9999;
}
.group-bottom button{
width:250rpx;
}
.tree-top{margin-top:100rpx;}
.btn-save{background-color:#1296db;color:#ffffff}